<div class="container-fluid py-5">
  <%= render 'shared/flash_message' %>
  <div class="glass-morphism p-4">
    <%= render @letter %>

    <div class="d-flex flex-column flex-md-row justify-content-center gap-3 mt-4">
      <%= link_to reset_program_random_letters_path(q: permitted_q_params),
          class: "btn btn-primary rounded-pill px-4 hover-lift",
          data: { turbo_prefetch: false } do %>
        <i class="bi bi-arrow-clockwise me-2"></i>
        既読リセット
      <% end %>

      <%= link_to random_program_random_letters_path(q: permitted_q_params),
            class: "btn btn-primary rounded-pill px-4 hover-lift",
            onclick: "window.open(this.href,'New letter', 'height=700, width=800'); return false;",
            data: { turbo_prefetch: false } do %>
        <i class="bi bi-shuffle me-2"></i>
        もう一度ランダム表示
      <% end %>

      <%= button_to "#",
          onclick: "window.close(); return false;",
          class: "btn btn-outline-light rounded-pill px-4 hover-lift" do %>
        <i class="bi bi-x-lg me-2"></i>
        ウィンドウを閉じる
      <% end %>
    </div>
  </div>
</div>